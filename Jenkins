pipeline {
    agent any

    tools {
        maven 'maven'  // Ensure this matches EXACTLY with the name in Jenkins
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/AishwaryaK515/new-repo.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn --version'  // Debugging step to confirm Maven path
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying the application..."
            }
        }
    }
}

